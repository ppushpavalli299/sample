CREATE PROCEDURE "DELETE_EMPLOYEE" (
    IN EMPLOYEE_ID BIGINT,
    OUT RESULT_MESSAGE NVARCHAR(500)
)
AS
BEGIN
    DECLARE EMP_EXISTS INT;

    SELECT COUNT(*) INTO EMP_EXISTS
    FROM "EMPLOYEE"
    WHERE "ID" = :EMPLOYEE_ID;

    IF EMP_EXISTS = 1 THEN
        DELETE FROM "EMPLOYEE" WHERE "ID" = :EMPLOYEE_ID;
        RESULT_MESSAGE := 'Employee deleted successfully';
    ELSE
        RESULT_MESSAGE := 'Employee not found';
    END IF;
END