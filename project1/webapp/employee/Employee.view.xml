<mvc:View controllerName="project1.employee.Employee"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <f:DynamicPage id="page_MngCompanies" headerExpanded="true">

        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Employee" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <fb:FilterBar id="filterbar" filterBarExpanded="true" search="onSearch" clear="clearAllFilters" useToolbar="false" showGoOnFB="true" showClearOnFB="true" showFilterConfiguration="false">

                    <fb:filterItems>
                        <fb:FilterItem name="A" label="ID">
                            <fb:control>
                                <Input placeholder="Enter Employee ID" value="{advancedFilterMdl>/id}" />
                            </fb:control>
                        </fb:FilterItem>

                        <fb:FilterItem name="B" label="Name">
                            <fb:control>
                                <Input placeholder="Enter Employee Name" value="{advancedFilterMdl>/name}" />
                            </fb:control>
                        </fb:FilterItem>

                        <fb:FilterItem name="C" label="Designation">
                            <fb:control>
                                <Input placeholder="Enter Employee Designation" value="{advancedFilterMdl>/designation}" />
                            </fb:control>
                        </fb:FilterItem>

                        <fb:FilterItem name="D" label="Status">
                            <fb:control>
                                <Input placeholder="Enter Status" value="{advancedFilterMdl>/status}" />
                            </fb:control>
                        </fb:FilterItem>
                    </fb:filterItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <Table id="tableId_companies" mode="SingleSelectMaster" growing="true" growingThreshold="20" items="{employeeMdl>/employees}" itemPress="onListItemPress" inset="false" class="sapFDynamicPageAlignContent" width="auto" autoPopinMode="true" contextualWidth="Auto" title="Employee List">

                <!-- Header Toolbar -->
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button text="Create" type="Ghost" press="onCreateEmployee" />
                    </OverflowToolbar>
                </headerToolbar>

                <!-- Info Toolbar -->
                <infoToolbar>
                    <OverflowToolbar id="filterInfo">
                        <Title text="{= 'Items (' + ${employeeMdl>/employees}.length + ')' }" />
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </infoToolbar>

                <!-- Columns -->
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
                        <Text text="Name" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
                        <Text text="Designation" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Actions" visible="false"/>
                    </Column>
                </columns>

                <!-- Items -->
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <ObjectIdentifier title="{employeeMdl>id}" />
                            <Text text="{employeeMdl>name}" />
                            <Text text="{employeeMdl>designation}" />
                            <Text text="{employeeMdl>statusText}" />
                            <Button icon="sap-icon://show" type="Transparent" tooltip="{i18n>com_viewTemplate}" press="onPressViewTemplate" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>