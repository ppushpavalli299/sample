<mvc:View controllerName="project1.employee.Employee"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    xmlns:tnt="sap.tnt"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:u="sap.ui.unified"
    xmlns:v="sap.ui.comp.variants"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:card="sap.f.cards"
    xmlns:table="sap.ui.table"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:l="sap.ui.layout">

    <f:DynamicPage id="page_MngCompanies" headerExpanded="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Employee" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <fb:FilterBar id="filterbar" filterBarExpanded="true" search="advancedFilter" useToolbar="false" showGoOnFB="true" showClearOnFB="true" clear="clearAllFilters" showFilterConfiguration="false">
                    <fb:filterItems>
                        <fb:FilterItem name="A" label="ID">
                            <fb:control>
                                <Input placeholder="Select Employee ID" value="{advancedFilterMdl>/id}" />
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="B" label="Name">
                            <fb:control>
                                <Input placeholder="Select Employee Name" value="{advancedFilterMdl>/name}" />
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="C" label="Designation">
                            <fb:control>
                                <Input placeholder="Select Employee Designation" value="{advancedFilterMdl>/designation}" />
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="D" label="Status">
                            <fb:control>
                                <Input placeholder="Select Employee Status" value="{advancedFilterMdl>/statusText}" />
                            </fb:control>
                        </fb:FilterItem>
                    </fb:filterItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <Table id="tableId_companies" items="{employeeMdl>/}" itemPress="onListItemPress" mode="SingleSelectMaster" sticky="ColumnHeaders,HeaderToolbar" inset="false" class="sapUiSmallMarginTop">

                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Label design="Bold" text="{= 'Items(' + ${employeeMdl>/}.length + ')'}" visible="{= ${employeeMdl>/}.length >= 0}" />
                            <ToolbarSpacer />
                            <Button text="Create" type="Ghost" press="onCreateEmp" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
                        <Text text="Name" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
                        <Text text="Designation" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline">
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Actions" visible="false"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <ObjectIdentifier title="{employeeMdl>id}" />
                            <Text text="{employeeMdl>name}" />
                            <Text text="{employeeMdl>designation}" />
                            <Text text="{employeeMdl>status}" />
                            <Button icon="sap-icon://show" type="Transparent" tooltip="{i18n>com_viewTemplate}" press="onPressViewTemplate" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
