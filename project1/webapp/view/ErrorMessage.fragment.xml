<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">

    <MessagePopover
        id="errorPopover"
        placement="Top"
        items="{errors>/}"
        activeTitlePress="onActiveTitlePress">

        <items>
            <MessageItem
                type="{errors>type}"
                title="{errors>title}"
                subtitle="{errors>subtitle}"
                description="{errors>description}"
                activeTitle="{errors>active}" />
        </items>
    </MessagePopover>

</core:FragmentDefinition>
